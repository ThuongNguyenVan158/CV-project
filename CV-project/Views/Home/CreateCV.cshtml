
@{
    ViewData["Title"] = "CreateCV";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sign Up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">

    <link rel="stylesheet" href="/css/createcv_style.css">

</head>

<body>
    <section class="ftco-section">

        @*<form action="http://thetheme.io/thejobs/resume-add.html#">*@
        <main>
            <div class="row d-md-flex-row overflow-hidden">
                <div class="col-md-8 pt-10 pt-md-1 pb-5 bg-light" style="height: 550px; overflow-y: scroll;">
                    <div class="container page-name mt-4">
                        <h1 class="text-center">Welcome! Let's create your profile!</h1>
                    </div>

                    @*<div class="container mt-7">
                            <h3>Add an avatar</h3>
                            <div class="row">
                                <div class="col">
                                    <img src="data:image/png;base64,">
                                </div>
                                <div class="col mt-5">
                                    <button type="button" class="btn btn-info mb-1">Upload file</button>
                                    <label class="btn-link">> Or choose one from our defaults</label>
                                </div>
                            </div>
                        </div>*@

                    <div class="col-xs-12 col-sm-11 mt-5 w-100">
                        <h6>Name</h6>
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="Name">
                        </div>

                        <h6>Brief Introduction</h6>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Short description about you"></textarea>
                        </div>

                        <h6>Career objecives</h6>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Career objectives"></textarea>
                        </div>

                        <h6>Contact Information</h6>
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="Contact Information">
                        </div>

                        <h6>Awards</h6>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Awards"></textarea>
                        </div>

                        <h6>Certificates</h6>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Certificates"></textarea>
                        </div>

                        <h6>Work Experiences</h6>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Experiences"></textarea>
                        </div>

                        <h6>Activities</h6>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Activities"></textarea>
                        </div>

                        <hr class="hr-lg">


                        <div class="btn-group w-100" role="group" aria-label="Basic example">
                            <div class="upload-button mr-3 w-50 h-25">
                                <button class="btn btn-block btn-primary rounded submit px-3">Upload your CV</button>
                                <input type="file" hidden>
                            </div>
                            <div class="upload-button w-50 h-25">
                                <button class="btn btn-block btn-primary rounded submit px-3">Upload your Contact information</button>
                                <input type="file" hidden>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary mt-3 w-100 rounded submit px-3">Next</button>


                    </div>
                </div>

                <div class="col-md-4  p-0 col-12 bg-light d-flex overflow-hidden ">
                    <div class="card p-0   w-100 h-100 text-light   border-0 ">
                        <img class="card-img h-100 w-100"
                             src="https://images.unsplash.com/photo-1550757750-4ce187a65014?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
                             alt="Card image">
                    </div>
                </div>
            </div>
        </main>
        @*</form>*@
    </section>
</body>
</html>