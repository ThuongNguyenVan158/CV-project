
@{
    ViewData["Title"] = "CreateCompanyProfile";
}

<!DOCTYPE html>
<!-- saved from url=(0042)http://thetheme.io/thejobs/resume-add.html -->
<html lang="en">
<head>
    <title>Sign Up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">

    <link rel="stylesheet" href="/css/createcv_style.css">
    <link rel="stylesheet" href="/css/layout-style.css"> <!-- check -->
    <link rel="stylesheet" href="/css/site.css"> <!-- check -->

</head>

<body>
    <section>

        @*<form action="http://thetheme.io/thejobs/resume-add.html#">*@
        <div class="row d-md-flex-row overflow-hidden">
            <div class="col-md-4  p-0 col-12 bg-light d-flex overflow-hidden " style="height: 80vh;">
                <div class="card p-0   w-100 h-100 text-light   border-0 ">
                    <img class="card-img h-100 w-100"
                         src="https://images.unsplash.com/photo-1550757750-4ce187a65014?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
                         alt="Card image">
                </div>
            </div>

            <div class="col-md-8 pt-10 pt-md-1 pb-5 bg-light" style="height: 80vh; overflow-y: scroll;">
                <div class="container page-name mt-4">
                    <h1 class="text-center mt-4" style="font-size: 35px;"><b>Welcome! Let's create your profile!</b></h1>
                </div>

                <div class="col-xs-12 col-sm-12 mt-5 w-100">

                    <div class="mb-4">
                        <h5><strong>Company's Information</strong></h5>
                    </div>

                    <h6><strong>Name</strong></h6>
                    <div class="form-group">
                        <input type="text" class="form-control input-lg w-100" maxlength="50">
                    </div>

                    <h6><strong>Number of Employees</strong></h6>
                    <div class="form-group">
                        <input type="text" class="form-control input-lg w-100">
                    </div>

                    <h6><strong>Address</strong></h6>
                    <div class="form-group">
                        <input type="text" class="form-control input-lg w-100" maxlength="200">
                    </div>

                    <h6><strong>Description</strong></h6>
                    <div class="form-group">
                        <input type="text" class="form-control input-lg w-100" maxlength="2000">
                    </div>

                    <button id="createCVBtnStyle" type="button" class="btn btn-primary mt-3 w-100 submit px-3">Finish</button>

                </div>
            </div>
        </div>
        @*</form>*@
    </section>
</body>
</html>